PARAMETER c
ON KEY
SET CURSOR ON
CLOSE DATABASES
DEFINE WINDOW detalle FROM 07, 02  ;
       TO 20, 77 DOUBLE COLOR  ;
       SCHEME 7
SET SYSMENU ON
ACTIVATE WINDOW tablas
DO p_prestab WITH 'CONSULTAS',  ;
   'LISTA DE PRECIOS SAMSUNG',  ;
   'SAMSUNG'
@ 2, 63 SAY PROGRAM()
ON KEY LABEL ENTER DO BASES WITH PROMPT()
DEFINE POPUP consulta FROM 07, 10  ;
       TO 16, 30 PROMPT FILE LIKE  ;
       H:\samsung\*.dbf TITLE  ;
       'SAMSUNG' FOOTER 'BASES'
ACTIVATE POPUP consulta
ON KEY
RELEASE WINDOW detalle
RELEASE POPUP consulta
CLOSE DATABASES
DEACTIVATE WINDOW tablas
DO p_footer WITH  ;
   '100000000001011000001', 1
ACTIVATE SCREEN
RETURN
*
PROCEDURE bases
PARAMETER mpropmt
ON KEY
IF '.DBF' $ mpropmt
     use &mpropmt
     BROW NOAPPEND NODELETE NOMODIFY WIND;
DETALLE TITLE "&mpropmt" color scheme;
9
ELSE
     WAIT WINDOW 'ERROR'
ENDIF
ON KEY LABEL ENTER DO BASES WITH PROMPT()
