PROCEDURE antes
PARAMETER opc1
DO CASE
     CASE opc1 = 1
          DO esc_indica WITH 1,  ;
             'AYU', 'BBB', 'BUS',  ;
             'BBB'
          ON KEY LABEL F6 DO AYUDA WITH;
1
     CASE opc1 = 2
          DO esc_indica WITH 1,  ;
             'AYU', 'BBB', 'BBB',  ;
             'BBB'
     CASE opc1 = 3
          DO esc_indica WITH 1,  ;
             'AYU', 'BBB', 'BUS',  ;
             'BBB'
          ON KEY LABEL F6 DO AYUDA WITH;
2
     CASE opc1 = 4
          ON KEY LABEL F6 DO AYUDA WITH;
3
ENDCASE
