FUNCTION valida2
PARAMETER wrk_codtab, opc3
SELECT 2
DO CASE
     CASE opc3 = 1
          SEEK 'ESOR' +  ;
               wrk_codtab
     CASE opc3 = 2
          IF EMPTY(wrk_codtab)
               DO error WITH  ;
                  'No se Permiten Blancos'
               RETURN .F.
          ENDIF
          DO CASE
               CASE wrk_opcion =  ;
                    1
                    SEEK 'TALL' +  ;
                         wrk_codtab
               CASE wrk_opcion =  ;
                    2
                    SEEK 'EMIS' +  ;
                         wrk_codtab
               CASE wrk_opcion =  ;
                    3
                    SEEK 'MARC' +  ;
                         wrk_codtab
          ENDCASE
     CASE opc3 = 3
          SEEK 'INGA' +  ;
               wrk_codtab
ENDCASE
IF  .NOT. FOUND()
     DO error WITH  ;
        'C¢digo de Tabla No Existe'
     RETURN .F.
ENDIF
IF opc3 = 1
     wrk_desest = tab_destab
ENDIF
