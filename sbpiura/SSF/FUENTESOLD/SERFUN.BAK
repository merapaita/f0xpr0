FUNCTION Val_Con
*---------------
PARAMETERS xcod
PRIVATE cOrd

mAlias = ALIAS()
v_fun = .F.
v_Ent = .F.

SELE MaeSoc
GO TOP
cOrd = ORDER()
SET ORDER TO MaeSoc1

IF !EMPTY(xcod)
	SEEK xcod
	v_fun = IIF(FOUND(),"","")
	v_Ent = FOUND()
ENDIF

IF EMPTY(xcod) OR !V_ENT
	SET ORDER TO MaeSoc2
	GO TOP
	ACTIVATE SCREEN
	ON KEY LABEL F10 KEYBOARD CHR(23)
	ON KEY LABEL F2 DO FunBusDet
	DEFINE WINDOW _BusCon FROM 2,01 TO 22,78
	ACTIVATE WINDOWS _BusCon
	BROWSE WINDOW _BusCon TITLE '²²²² [F10] Selecciona   [F2] Buscar ²²²²' NOLGRID NOEDIT NOAPPEND NODELETE NOMENU;
	 FIELDS;
			CodCon   :H='Contrato'  ,;
			Apelli   :H='Apellido':30,;
			Nombre   :H='Nombre'  :30,;
			Direcc   :H='Direccion:30'
	
	ON KEY LABEL F10
	ON KEY LABEL F2
	DEACTIVATE WINDOWS _BusCon
	RELEASE    WINDOW _BusCon
	
	IF Lastkey()=27
		V_FUN = .f.
		v_ent = .f.
	 ELSE
		xCod       = CodCon
*		SELECT (mAlias)
		SHOW GETS
		v_fun = .T.
		v_ent = .t.
	ENDIF
ENDIF

SET ORDER TO cOrd

UNLOCK ALL

SELECT (mAlias)
IF !V_ENT
	RETURN v_FUN
 ELSE
	RETURN v_ENT
ENDIF

RETURN

FUNCTION ValEst
*--------------
PRIVATE cAlias
cAlias = ALIAS()
DO CASE
	CASE MaeSoc.Estado = '99'
		DO StandBy WITH 'El Contrato esta Anulado. No puede tener Servicio'
		m.CodCon = SPACE(6)
		mRet = .F.
	CASE MaeSoc.Estado = '90'
		DO StandBy WITH 'El Contrato esta Rescindido. No puede tener Servicio'
		m.CodCon = SPACE(6)
		mRet = .F.
	OTHERWISE
		mRet = .T.
ENDCASE
SELE (cAlias)
RETURN mRet


