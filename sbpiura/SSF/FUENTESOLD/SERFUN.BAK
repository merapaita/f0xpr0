PROCEDURE corri
*--------------
SELECT Servicio
SCATTER MEMVAR
IF EOF()
	DO standby WITH vmens08
	RETURN
ENDIF
IF m.estado = '99'
	* Anulada
	DO standby WITH vmens09
	RETURN
ENDIF
DO pantalla

@  0,22 SAY m.NumSer
@  2,22 SAY m.CodCon
@  4,22 GET m.FecSer  PICTURE "@!" 
@  6,22 GET m.NumAfi  PICTURE "@!" 	WHEN .F.
@  8,22 GET m.ApeAfi  PICTURE "@!"
@ 10,22 GET m.NomAfi  PICTURE "@!"
@ 12,22 GET m.edadAfi
@ 14,22 GET m.Parent	WHEN .F.
@ 14,25 SAY Val_para(m.parent,'PARENT',' ',22)
@ 16,22 GET m.MtoSer  PICTURE "99,999.99" VALID m.MtoSer > 0

READ VALID val_read()

IF LASTKEY() # 27
	ak = ActKar('S',m.NumSer,m.FecSer)
	GATHER MEMVAR
 ELSE
	DO standby WITH 'Proceso cancelado'
ENDIF

UNLOCK ALL
SELECT Servicio
DO vista
RETURN

PROCEDURE ingre              && Crea nuevo registro en BD
*--------------
SELECT Servicio
op=ORDER()
vtemp = IIF(!EOF(),RECNO(),-1)
DO pantalla
SCATTER MEMVAR BLANK

SELE Parma
SEEK 'CORRELSERFUN'
IF FOUND()
	m.NumSer = PADL(ALLTRIM(STR(NumEnt+1)),4,'0')
	IF SEEK(m.NumSer,'Servicio')
		DO StandBy WITH "El Correlativo Generado ya Existe."
		SELE Servicio
		*GO nReg
		DO Vista
		RETURN
	ENDIF
 ELSE
	DO StandBy WITH "El Parametro de Correlativos no existe. por favor consulte al area de Sistemas"
	DO Vista
	RETURN
ENDIF

SELE Servicio
m.FecSer = DATE()

@  0,22 GET m.NumSer  WHEN .F.
@  2,22 GET m.CodCon  VALID Val_Con(m.CodCon) AND ValEst()
@  4,22 GET m.FecSer  PICTURE "@!" 
@  6,22 GET m.NumAfi  VALID Val_Afi(m.NumAfi) PICTURE "@!" 
@  8,22 GET m.ApeAfi  PICTURE "@!"
@ 10,22 GET m.NomAfi   
@ 12,22 GET m.edadAfi  
@ 14,22 GET m.Parent  VALID Val_para(m.parent,'PARENT',' ',22) 
@ 16,22 GET m.MtoSer  PICTURE "99,999.99"  VALID m.MtoSer > 0

READ VALID val_read()

IF LASTKEY()#27
	ak = ActKar('S',m.NumSer,m.FecSer)
	SELE maesoc
	REPLACE Estado WITH '10'
	SELE itesoc
	REPLACE Estado WITH '10'
	
	SELE Parma
	SEEK 'CORRELSERFUN'
	IF FOUND()
		REPLACE NumEnt WITH NumEnt+1
	ENDIF
	
	IF ak
		SELE Servicio
		IF f_appd()
			GATHER MEMVAR
		ENDIF
	ENDIF
 ELSE
	DO StandBy WITH "Cancela Informacion"
	IF vTemp = -1
		GO TOP
	 ELSE
		go vtemp
	ENDIF
	DO vista
	RETURN
ENDIF

UNLOCK ALL
SELECT Servicio
do pantalla
DO vista
RETURN

PROCEDURE elimi
*---------------
SELECT Servicio
IF EOF()
	DO standby WITH vmens08
	RETURN
ENDIF
velimina = yesno('¨ Desea ELIMINAR ‚ste Socio?')
IF velimina .AND.  f_lock(1)
	SELE maesoc
	IF SEEK(Servicio.CodCon)
		IF f_lock(1)
			REPLACE Estado WITH '00'
		ENDIF
	ENDIF
	SELE itesoc
	
	IF SEEK(Servicio.CodCon+Servicio.NumAfi)
		IF f_lock(1)
			REPLACE Estado WITH '00'
		ENDIF
	ENDIF
	SELE Servicio
	DELE NEXT 1
	IF !BOF()
		SKIP -1
	ELSE
		IF !EOF()
			SKIP
		ENDIF
	ENDIF
ENDIF
UNLOCK ALL

DO vista
RETURN

